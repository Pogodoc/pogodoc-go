{
  "compilerOptions": {
    "module": "amd",
    "emitDeclarationOnly": true,
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/"
  },
  "exclude": ["dist", "src/test.ts", "node_modules", "**/*.spec.ts", ".env"]
}
